{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "**/*.@(html|js|css)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=0, no-cache, no-store, must-revalidate"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "/login",
        "destination": "/login.html"
      },
      {
        "source": "/admin/init-data",
        "destination": "/admin/init-data.html"
      },
      {
        "source": "/admin/locations",
        "destination": "/admin/locations-manager.html"
      },
      {
        "source": "/portals/base",
        "destination": "/portals/base-portal.html"
      },
      {
        "source": "/portals/location",
        "destination": "/portals/location-portal.html"
      },
      {
        "source": "/portals/staff",
        "destination": "/portals/staff-portal.html"
      },
      {
        "source": "/asana",
        "destination": "/admin/asana-manager.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "firestore": {
    "rules": "firestore.rules"
  }
}
